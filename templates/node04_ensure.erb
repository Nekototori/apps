#!/usr/bin/env bash

source "/opt/apps/<%= name %>/env"

if [[ ! -L "$ROOT_PATH/node_modules" ]]; then
  rm -f "$ROOT_PATH/node_modules"
  ln -s "$DEPS_PATH" "$ROOT_PATH/node_modules"
fi

if [[ ! -L "$REPO_PATH/node_modules" ]]; then
  rm -f "$REPO_PATH/node_modules"
  ln -s "$ROOT_PATH/node_modules" "$REPO_PATH/node_modules"
fi

chmod 777 "$REPO_PATH/node_modules"
